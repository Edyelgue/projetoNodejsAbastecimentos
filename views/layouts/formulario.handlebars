<!doctype html>
<html lang="pt-BR">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

</head>

<body class="container-fluid">
  <div>

    <form action="/add" method="POST">

      <div class="row">

        <div class="form-floating mb-3 col-sm">
          <select name="placa" class="form-select form-select-sm" aria-label=".form-select-sm example">
            <option selected>Selecione a Placa</option>
            <option value="OBV2H41">OBV2H41</option>
            <option value="EYS6I39">EYS6I39</option>
            <option value="GVE-9618">GVE-9618</option>
          </select>
        </div>

        <div class="form-floating mb-3 col-sm">
          <input name="valorLitro" type="number" step="0.01" class="form-control" id="" placeholder="Valor por Litro">
          <label for="">Valor por Litro</label>
        </div>

        <div class="form-floating mb-3 col-sm">
          <input name="litrosAbastecidos" type="number" step="0.01" class="form-control" id="" placeholder="Litros Abastecidos">
          <label for="">Litros Abastecidos</label>
        </div>

      </div>

      <div class="row">
        <div class="form-floating mb-3 col-sm">
          <input name="kmVeiculo" type="number" class="form-control" id="" placeholder="Quilometragem">
          <label for="">Quilometragem</label>
        </div>

        <div class="form-floating mb-3 col-sm">
          <input name="dataAbastecimento" type="date" class="form-control" id="" placeholder="Litros Abastecidos">
          <label for="">Data do Abastecimento</label>
        </div>
      </div>

      <div class="m-5 text-center">
        <button name="salvar" type="submit" class="btn btn-success">Salvar</button>
      </div>

    </form>

  </div>

</body>

</html>